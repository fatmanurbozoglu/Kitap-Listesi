<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detaylarfragmenti">

    <EditText
        android:id="@+id/bookNameTextView"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="kitap adını giriniz:"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/detailTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/detailTextView"
        android:layout_width="326dp"
        android:layout_height="156dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="kitap hakkında bilgileri giriniz:"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:background="#4F59B3"
        android:text="kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="377dp"
        android:layout_height="157dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toTopOf="@+id/bookNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>